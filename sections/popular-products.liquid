<h2>{{ section.settings.title }}</h2>
  <div class="product-container">
    {% for block in section.blocks %}
      <div class="block">
        <div class="content">
          <div class="inner">
            <h3>{{ block.settings.h3 }}</h3>
            <span>{{ block.settings.span }}</span>
            <p>{{ block.settings.paragraph }}</p>
          </div>
        </div>

            <div class="image">
              <img src="{{ block.settings.image | img_url: "master" }}"/>
            </div>

            <div class="btn">
              <button>{{ block.settings.button }}</button>
            </div>
      </div>
    {% endfor %}
  </div>

{% schema %}
{
  "name": "Popular - products",
  "tag": "section",
  "class": "pop-products",
  "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Shop by popular products"
      }
      ],
  "blocks": [
  {
    "type": "text",
    "name": "Popular-products",
    "settings": [
      {
        "type": "text",
        "id": "h3",
        "label": "H3",
        "default": "CBD Oral Drops"
      },
      {
        "type": "text",
        "id": "span",
        "label": "Span",
        "default": "Perfect for beginners"
      },
      {
        "type": "text",
        "id": "paragraph",
        "label": "Paragraph",
        "default": "1200MG | Â£19.99"
      },
      {
        "type": "text",
        "id": "button",
        "label": "Button link",
        "default": "Buy Now"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
      ]
    }
  ],
  "presets": [
    {
      "name": "Popular - products",
      "category": "Popular - Products"
    }
  ]
}
{% endschema %} 